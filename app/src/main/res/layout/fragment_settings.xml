<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="40dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Заголовок и кнопка Close -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/btnClose"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Закрыть"
                android:textColor="#8F000000"
                android:textSize="10sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvTitleSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Настройка аккаунта"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#8F000000"
                android:text="Сохранить"
                style="@style/Widget.MaterialComponents.Button.TextButton" />
        </LinearLayout>

        <!-- Аватар -->
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_user"
            android:contentDescription="Аватар"/>

        <Button
            android:id="@+id/btnChangeAvatar"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            app:cornerRadius="40dp"
            android:text="Сменить"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_info_block"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Заголовок -->
            <TextView
                android:id="@+id/labelPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя"
                android:textColor="#808080"
                android:textSize="12sp" />

            <!-- Значение -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User"
                android:inputType="textPersonName" />
        </LinearLayout>
        <!-- Поля редактирования -->



    </LinearLayout>
</ScrollView>
